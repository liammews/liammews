---
import "./nav.css";
import Button from "../Button/index.astro";
import { Icon } from "astro-icon/components";
import Modal from "../Modal/index.astro";
import NavItem from "./NavItem.astro";
---

<header class="nav">
    <div class="nav_container">
        <a aria-label="Navigate to home" href="/">
            <Icon name="logo" height={32} width={32} />
        </a>
    
        <div class="nav_button-group">
            <slot />
            <Button ariaLabel="Open Menu" modalId="menu" action="open" isSquare>
                <Icon name="list" />
            </Button>
        </div>
    
        <Modal id="menu" keyboardShortcut="k">
            <div slot="title">Menu</div>
    
            <nav>
                <ul class="nav_menu">
                    <NavItem link="/" shortcut="1">Index</NavItem>
                    <NavItem link="/about" shortcut="2">About</NavItem>
                    <NavItem link="/notes" shortcut="3">Notes</NavItem>
                    <NavItem link="/moments" shortcut="4">Moments</NavItem>
                    <NavItem link="/inventory" shortcut="5">Inventory</NavItem>
                </ul>
            </nav>
        </Modal>

    </div>
</header>
  


