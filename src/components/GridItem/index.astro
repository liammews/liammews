---

import "./grid-item.css";

interface Props {
    title?: string;
    description?: string;
    image?: string;
    link?: string;
    titleStyle?: 'left' | 'center' | 'horizontal' | 'left-reverse' | 'center-reverse';
    icon?: string;
}

const { title, description, image, link, titleStyle = 'horizontal', icon } = Astro.props;

---

<div class="grid-item">
    <div class="grid-item_content">
        <slot />
    </div>

    {title && (
        <div class:list={[
            "grid-item_title",
            { 'is-left': titleStyle === 'left' },
            { 'is-center': titleStyle === 'center' },
            { 'is-horizontal': titleStyle === 'horizontal' },
            { 'is-left-reverse': titleStyle === 'left-reverse' },
            { 'is-center-reverse': titleStyle === 'center-reverse' }
        ]}>
         <p>{title}</p>
        {description && (
            <p class="text-color-muted">{description}</p>
        )}

        {icon && (
            <img src={icon} alt={title} class="grid-item_icon" width="18" height="18" />
        )}
        </div>
    )}

    {image && (
        <div class="scrim" />
        <img src={image} alt={title} class="image-cover" width={100} height={100} />
    )}

    {link && (
        <a href={link} aria-label="Navigate to {title}" class="link-cover" />
    )}

</div>